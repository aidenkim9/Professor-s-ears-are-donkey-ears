extends layout

block link
    link(rel="stylesheet" href="/css/form.css")
block content
    h1.page-title Professor's Ears are Donkey Ears
    if errorMessage 
        span=errorMessage
    div.content-box
        form(action="/join" method="POST").login-form
            input(placeholder="E-mail:" type="text" name="email")
            input(placeholder="User-Id: " type="number" name="user_id")
            input(placeholder="Password:" type="password" name="password")
            input(placeholder="Check Password:" type="password" name="password2")
            button Join
            a.alt_btn(href="/login") LOGIN &rarr;