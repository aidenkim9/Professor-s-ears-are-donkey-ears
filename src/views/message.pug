extends layout

block link
    link(rel="stylesheet" href="/css/home.css")
    link(rel="stylesheet" href="/css/message.css")
    

block content
    div.header
        div.header_box
            h1 Professor's Ears are Donkey Ears
        div.header_box
            a(href="/user-profile") 
                i.fas.fa-user
    div.message-container
      form.message-form(action="write" method="POST")
        input(type="number" placeholder="Student Id" name="stu_id")
        input(type="number" placeholder="Professor Id" name="pro_id")
        input(type="text" placeholder="Title" name="title" id="title")
        textarea.message-form_box(id="message" name="message" placeholder="Write your message." required) 
        button.message-form_btn Send