extends layout

block link
    link(rel="stylesheet" href="/css/home.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")


block content
    div.header
        div.header_box
            h1 Professor's Ears are Donkey Ears
        div.header_box
            a(href="/user-profile") 
                i.fas.fa-user
    div
        h1.message-title Messages (#{messages.length})
        ul.messages
            each message in messages
                li.message
                    a(href=`/message/${message.id}`)=message.title 
            else 
                li No message.

    