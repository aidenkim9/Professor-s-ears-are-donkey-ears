extends layout

block link
    link(rel="stylesheet" href="/css/home.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")


block content
    div.header
        div.header_box
            h1 Professor's Ears are Donkey Ears
        div.header_box
            a(href="/user-profile") 
                i.fas.fa-user
    div
        h1.message-title #{messages.length} #{messages.length <= 1 ? "Message" : "Messages"}
        ul.messages
            each message in messages
                li.message
                    a(href=`/message/${message.id}`)
                        div 
                            span=message.title
            else 
                li No message.
    nav.nav
        ul.nav-bar
            li.nav-bar_icon
                a(href="/menu")
                    i.fas.fa-bars
            li.nav-bar_icon
                a(href="/message/write")
                    i.fas.fa-envelope
            li.nav-bar_icon
                a(href="/")
                    i.fas.fa-home
            li.nav-bar_icon
                a(href="/message/edit")
                    i.fas.fa-edit
            li.nav-bar_icon
                a(href="/search")
                    i.fas.fa-search

    